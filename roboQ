    <!-- Main Display -->
    <div class="flex-1 bg-slate-950 flex items-center justify-center p-4 lg:p-10 relative overflow-hidden">
        
        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(#38bdf8 1px, transparent 1px); background-size: 30px 30px;"></div>

        <div class="canvas-container relative">
            <div class="absolute -top-10 left-0 flex gap-4 text-xs font-bold text-slate-400">
                <span class="flex items-center gap-2"><div class="w-2 h-2 rounded-full bg-blue-500"></div> Agent</span>
                <span class="flex items-center gap-2"><div class="w-2 h-2 rounded-full bg-yellow-400"></div> Goal</span>
                <span class="flex items-center gap-2"><div class="w-2 h-2 rounded-full bg-purple-500"></div> Button</span>
                <span class="flex items-center gap-2"><div class="w-2 h-2 rounded-sm bg-slate-600"></div> Wall</span>
            </div>
            
            <canvas id="gameCanvas" width="800" height="600" class="bg-slate-900 shadow-2xl border border-slate-800"></canvas>
            
            <!-- Floating Notification -->
            <div id="notification" class="absolute top-4 left-1/2 -translate-x-1/2 bg-slate-800/90 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg opacity-0 transition-opacity pointer-events-none border border-slate-600 whitespace-nowrap z-20">
                Training Started
            </div>
        </div>
    </div>

    <script>
        /**
         * ROBO-ACADEMY
         * Educational Q-Learning Implementation
         */

        // --- Configuration & State ---
        let CONFIG = {
            gridSize: 40, 
            cols: 5,     
            rows: 5,     
            colors: {
                bg: '#0f172a',
                wall: '#334155',
                agent: '#38bdf8',
                goal: '#facc15',
                goalInactive: '#475569',
                button: '#a855f7',
                grid: '#1e293b',
                path: 'rgba(255, 255, 255, 0.3)'
            },
            rewards: {
                goal: 100,
                button: 20,
                wall: -100,
                step: -1
            }
        };

        const state = {
            running: false,
            autoTrain: false, 
            speedValue: 50, 
            showBrain: true,
            episode: 0,
            wins: 0,
            bestReward: -Infinity,
            history: [],
            tool: 'wall',
            isDrawing: false,
            frameCount: 0,
            needsReset: false,
            path: [] // Stores coordinates for trail
        };

        // --- Elements ---
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const chartCanvas = document.getElementById('chartCanvas');
        const chartCtx = chartCanvas.getContext('2d');
        const scoreEl = document.getElementById('currentScore');
        
        // --- The Environment ---
        class Environment {
            constructor() {
                this.resize(CONFIG.cols, CONFIG.rows);
            }

            resize(cols, rows) {
                this.width = cols;
                this.height = rows;
                
                const maxW = 800;
                const maxH = 600;
                
                const sizeX = maxW / cols;
                const sizeY = maxH / rows;
                CONFIG.gridSize = Math.floor(Math.min(sizeX, sizeY));

                canvas.width = maxW;
                canvas.height = maxH;
                
                this.offsetX = (maxW - (cols * CONFIG.gridSize)) / 2;
                this.offsetY = (maxH - (rows * CONFIG.gridSize)) / 2;

                this.resetMap();
            }

            // Called when map size changes or reset button
            resetMap() {
                this.grid = Array(this.height).fill().map(() => Array(this.width).fill(0));
                this.agentPos = { x: 0, y: 0 };
                this.goalPos = { x: this.width - 1, y: this.height - 1 };
                this.buttonPos = null; // Coordinates of button (if any)
                this.resetEpisode();
            }

            // Called every episode
            resetEpisode() {
                this.agentPos = { x: 0, y: 0 };
                // Goal is active if NO button exists. If button exists, goal is inactive.
                this.goalActive = (this.buttonPos === null); 
                state.path = [{x:0, y:0}];
            }

            toGrid(px, py) {
                return {
                    x: Math.floor((px - this.offsetX) / CONFIG.gridSize),
                    y: Math.floor((py - this.offsetY) / CONFIG.gridSize)
                };
            }

            handleMapClick(x, y) {
                // Ignore click on start pos
                if (x === 0 && y === 0) return;
                if (x < 0 || x >= this.width || y < 0 || y >= this.height) return;

                if (state.tool === 'goal') {
                    this.goalPos = { x, y };
                    // Clear walls or buttons at this spot
                    this.grid[y][x] = 0;
                    if (this.buttonPos && this.buttonPos.x === x && this.buttonPos.y === y) this.buttonPos = null;
                } 
                else if (state.tool === 'button') {
                    // Toggle button
                    if (this.buttonPos && this.buttonPos.x === x && this.buttonPos.y === y) {
                        this.buttonPos = null;
                    } else {
                        this.buttonPos = { x, y };
                        // Clear walls/goal
                        this.grid[y][x] = 0;
                        if (this.goalPos.x === x && this.goalPos.y === y) this.goalPos = null; // Should not happen in UI logic but safety
                    }
                } 
                else if (state.tool === 'wall') {
                    // Avoid overwriting special items unless erased first
                    if ((this.goalPos.x === x && this.goalPos.y === y) || 
                        (this.buttonPos && this.buttonPos.x === x && this.buttonPos.y === y)) return;
                    this.grid[y][x] = 1;
                }
                else if (state.tool === 'eraser') {
                    this.grid[y][x] = 0;
                    if (this.buttonPos && this.buttonPos.x === x && this.buttonPos.y === y) this.buttonPos = null;
                    // Can't erase goal, just move it
                }
            }

            // Key change: State now includes "Goal Active" status
            getState() {
                const isActive = this.goalActive ? 1 : 0;
                return `${this.agentPos.x},${this.agentPos.y},${isActive}`;
            }

            step(action) {
                let nx = this.agentPos.x;
                let ny = this.agentPos.y;

                if (action === 0) ny--;
                if (action === 1) nx++;
                if (action === 2) ny++;
                if (action === 3) nx--;

                // Hit Grid Boundary
                if (nx < 0 || nx >= this.width || ny < 0 || ny >= this.height) {
                    return { reward: CONFIG.rewards.wall, done: true, nextState: this.getState() };
                }

                // Hit Wall
                if (this.grid[ny][nx] === 1) {
                    return { reward: CONFIG.rewards.wall, done: true, nextState: this.getState() };
                }

                // Valid Move
                this.agentPos = { x: nx, y: ny };
                state.path.push({x: nx, y: ny}); // Track path
                
                // Logic: Check for Button Press
                let r = CONFIG.rewards.step;
                
                if (this.buttonPos && nx === this.buttonPos.x && ny === this.buttonPos.y) {
                    if (!this.goalActive) {
                        this.goalActive = true;
                        r += CONFIG.rewards.button; // Bonus for activating
                        showNotification("Activated!", "text-purple-400");
                    }
                }

                const newState = this.getState(); // Calculate new state (includes active flag)

                // Logic: Check for Goal
                if (nx === this.goalPos.x && ny === this.goalPos.y) {
                    if (this.goalActive) {
                        return { reward: CONFIG.rewards.goal, done: true, nextState: newState };
                    } 
                    // If goal inactive, it's just a normal tile (maybe a visual indicator?)
                }

                return { reward: r, done: false, nextState: newState };
            }
        }

        // --- The Agent (Q-Learning) ---
        class Agent {
            constructor() {
                this.qTable = {}; 
                this.learningRate = 0.5; 
                this.discountFactor = 0.9; 
                this.epsilon = 0.9; 
                this.epsilonDecay = 0.99;
                this.epsilonMin = 0.01;
            }

            getQ(state) {
                if (!this.qTable[state]) {
                    this.qTable[state] = [0, 0, 0, 0];
                }
                return this.qTable[state];
            }

            getAction(state) {
                if (Math.random() < this.epsilon) {
                    return Math.floor(Math.random() * 4); 
                } else {
                    const qs = this.getQ(state);
                    let maxQ = Math.max(...qs);
                    // Randomize ties to prevent sticking
                    let indices = qs.map((q, i) => q === maxQ ? i : -1).filter(i => i !== -1);
                    return indices[Math.floor(Math.random() * indices.length)];
                }
            }

            learn(state, action, reward, nextState) {
                const currentQ = this.getQ(state)[action];
                const nextQs = this.getQ(nextState);
                const maxNextQ = Math.max(...nextQs);

                const newQ = currentQ + this.learningRate * (reward + this.discountFactor * maxNextQ - currentQ);
                this.qTable[state][action] = newQ;
            }

            decayEpsilon() {
                if (this.epsilon > this.epsilonMin) {
                    this.epsilon *= this.epsilonDecay;
                }
            }

            resetBrain() {
                this.qTable = {};
                this.epsilon = 0.9;
            }
        }

        // --- Visualization & Loop ---
        const env = new Environment();
        const agent = new Agent();

        function drawRect(gridX, gridY, color, fill = true) {
            const size = CONFIG.gridSize;
            const x = env.offsetX + gridX * size;
            const y = env.offsetY + gridY * size;
            
            if (fill) {
                ctx.fillStyle = color;
                ctx.fillRect(x, y, size, size);
            } else {
                ctx.strokeStyle = color;
                ctx.strokeRect(x, y, size, size);
            }
        }

        function draw() {
            ctx.fillStyle = CONFIG.colors.bg;
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw Grid & Q-Values
            for (let y = 0; y < env.height; y++) {
                for (let x = 0; x < env.width; x++) {
                    // Which state should we visualize?
                    // We visualize the Q-values relevant to the CURRENT situation (Goal Active vs Inactive)
                    const isActiveFlag = env.goalActive ? 1 : 0;
                    const stateKey = `${x},${y},${isActiveFlag}`;
                    
                    // Draw Walls
                    if (env.grid[y][x] === 1) {
                        drawRect(x, y, CONFIG.colors.wall);
                        ctx.fillStyle = '#475569';
                        const px = env.offsetX + x * CONFIG.gridSize + 4;
                        const py = env.offsetY + y * CONFIG.gridSize + 4;
                        ctx.fillRect(px, py, CONFIG.gridSize - 8, CONFIG.gridSize - 8);
                        continue;
                    }

                    // Draw Brain Visualization (Heatmap)
                    if (state.showBrain && agent.qTable[stateKey]) {
                        const qs = agent.qTable[stateKey];
                        const maxQ = Math.max(...qs);
                        const sumQ = qs.reduce((a, b) => a + b, 0);
                        const avgQ = sumQ / 4;

                        if (maxQ > 0) {
                            const alpha = Math.min(maxQ / (CONFIG.rewards.goal * 0.5), 0.8);
                            ctx.fillStyle = `rgba(52, 211, 153, ${alpha})`;
                            const px = env.offsetX + x * CONFIG.gridSize;
                            const py = env.offsetY + y * CONFIG.gridSize;
                            ctx.fillRect(px, py, CONFIG.gridSize, CONFIG.gridSize);
                        } 
                        else if (avgQ < -5) { 
                            const severity = Math.min(Math.abs(avgQ) / 50, 0.7);
                            ctx.fillStyle = `rgba(239, 68, 68, ${severity})`;
                            const px = env.offsetX + x * CONFIG.gridSize;
                            const py = env.offsetY + y * CONFIG.gridSize;
                            ctx.fillRect(px, py, CONFIG.gridSize, CONFIG.gridSize);
                        }
                    }

                    // Grid Lines
                    ctx.strokeStyle = CONFIG.colors.grid;
                    ctx.lineWidth = 1;
                    const px = env.offsetX + x * CONFIG.gridSize;
                    const py = env.offsetY + y * CONFIG.gridSize;
                    ctx.strokeRect(px, py, CONFIG.gridSize, CONFIG.gridSize);
                }
            }

            // Draw Button
            if (env.buttonPos) {
                const bx = env.offsetX + env.buttonPos.x * CONFIG.gridSize + CONFIG.gridSize/2;
                const by = env.offsetY + env.buttonPos.y * CONFIG.gridSize + CONFIG.gridSize/2;
                ctx.fillStyle = CONFIG.colors.button;
                ctx.beginPath();
                ctx.arc(bx, by, CONFIG.gridSize/4, 0, Math.PI * 2);
                ctx.fill();
                ctx.shadowColor = CONFIG.colors.button;
                ctx.shadowBlur = 10;
                ctx.stroke();
                ctx.shadowBlur = 0;
            }

            // Draw Goal
            const gx = env.offsetX + env.goalPos.x * CONFIG.gridSize + CONFIG.gridSize/2;
            const gy = env.offsetY + env.goalPos.y * CONFIG.gridSize + CONFIG.gridSize/2;
            
            // Goal Logic Color
            ctx.fillStyle = env.goalActive ? CONFIG.colors.goal : CONFIG.colors.goalInactive;
            
            ctx.beginPath();
            ctx.arc(gx, gy, CONFIG.gridSize/3, 0, Math.PI * 2);
            ctx.fill();
            if (env.goalActive) {
                ctx.shadowColor = CONFIG.colors.goal;
                ctx.shadowBlur = 15;
            }
            ctx.stroke();
            ctx.shadowBlur = 0;

            // Draw Path Trail
            if (state.path.length > 1) {
                ctx.beginPath();
                ctx.strokeStyle = CONFIG.colors.path;
                ctx.lineWidth = 4;
                ctx.lineCap = 'round';
                ctx.lineJoin = 'round';
                
                state.path.forEach((pos, i) => {
                    const px = env.offsetX + pos.x * CONFIG.gridSize + CONFIG.gridSize/2;
                    const py = env.offsetY + pos.y * CONFIG.gridSize + CONFIG.gridSize/2;
                    if (i === 0) ctx.moveTo(px, py);
                    else ctx.lineTo(px, py);
                });
                ctx.stroke();
            }

            // Draw Agent
            const ax = env.offsetX + env.agentPos.x * CONFIG.gridSize + CONFIG.gridSize/2;
            const ay = env.offsetY + env.agentPos.y * CONFIG.gridSize + CONFIG.gridSize/2;
            
            ctx.fillStyle = CONFIG.colors.agent;
            ctx.beginPath();
            ctx.arc(ax, ay, CONFIG.gridSize/2.5, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = 'white';
            ctx.beginPath();
            ctx.arc(ax - 5, ay - 2, 3, 0, Math.PI * 2);
            ctx.arc(ax + 5, ay - 2, 3, 0, Math.PI * 2);
            ctx.fill();
        }

        let currentEpisodeReward = 0;

        function runStep() {
            if (state.needsReset) return;

            const currentState = env.getState();
            const action = agent.getAction(currentState);
            const { reward, done, nextState } = env.step(action);

            agent.learn(currentState, action, reward, nextState);
            currentEpisodeReward += reward;
            
            scoreEl.innerText = currentEpisodeReward;
            if (currentEpisodeReward > 0) scoreEl.classList.add('text-green-400');
            else if (currentEpisodeReward < -50) scoreEl.classList.add('text-red-400');
            else scoreEl.className = "text-2xl font-bold text-white stat-value";

            if (done) {
                finishEpisode(reward);
            }
        }

        function finishEpisode(finalReward) {
            state.episode++;
            state.history.push(currentEpisodeReward);
            if (state.history.length > 50) state.history.shift();
            
            if (finalReward === CONFIG.rewards.goal) {
                state.wins++;
                showNotification("Goal Reached!", "text-green-400");
            } else {
                showNotification("Crashed!", "text-red-400");
            }

            if (currentEpisodeReward > state.bestReward) state.bestReward = currentEpisodeReward;
            
            agent.decayEpsilon();
            updateStats();
            drawChart();

            if (state.autoTrain) {
                env.resetEpisode();
                currentEpisodeReward = 0;
            } else {
                state.needsReset = true;
                state.running = false;
                document.getElementById('btnNextEp').classList.remove('hidden');
                updateTrainBtnState();
            }
        }

        function startNextEpisode() {
            state.needsReset = false;
            env.resetEpisode();
            currentEpisodeReward = 0;
            scoreEl.innerText = "0";
            document.getElementById('btnNextEp').classList.add('hidden');
            state.running = true;
            updateTrainBtnState();
        }

        function updateTrainBtnState() {
            const btn = document.getElementById('btnTrain');
            if (state.needsReset) {
                 btn.innerHTML = '<i class="fas fa-play"></i> Resume';
                 btn.classList.remove('bg-yellow-500', 'shadow-yellow-500/20');
                 btn.classList.add('bg-emerald-500', 'shadow-emerald-500/20');
            } else if (state.running) {
                btn.innerHTML = '<i class="fas fa-pause"></i> Pause';
                btn.classList.remove('bg-emerald-500', 'hover:bg-emerald-600', 'shadow-emerald-500/20');
                btn.classList.add('bg-yellow-500', 'hover:bg-yellow-600', 'shadow-yellow-500/20');
            } else {
                btn.innerHTML = '<i class="fas fa-play"></i> Train';
                btn.classList.add('bg-emerald-500', 'hover:bg-emerald-600', 'shadow-emerald-500/20');
                btn.classList.remove('bg-yellow-500', 'hover:bg-yellow-600', 'shadow-yellow-500/20');
            }
        }

        function update() {
            if (!state.running) return;

            let stepsToTake = 0;
            if (state.speedValue <= 40) {
                state.frameCount++;
                const interval = Math.floor(41 - state.speedValue);
                if (state.frameCount % interval === 0) stepsToTake = 1;
            } else if (state.speedValue <= 60) {
                stepsToTake = 1;
            } else {
                stepsToTake = Math.floor((state.speedValue - 60) * 2) + 1;
            }

            for (let i = 0; i < stepsToTake; i++) {
                if (!state.running) break;
                runStep();
            }
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        // --- Charts & UI ---
        function updateStats() {
            document.getElementById('episodeCount').innerText = state.episode;
            document.getElementById('bestReward').innerText = state.bestReward === -Infinity ? 0 : state.bestReward;
            document.getElementById('winCount').innerText = state.wins;
        }

        function drawChart() {
            const w = chartCanvas.width = chartCanvas.clientWidth;
            const h = chartCanvas.height = chartCanvas.clientHeight;
            chartCtx.clearRect(0, 0, w, h);
            if (state.history.length < 2) return;

            chartCtx.strokeStyle = '#38bdf8';
            chartCtx.lineWidth = 2;
            chartCtx.beginPath();
            const maxVal = Math.max(100, ...state.history);
            const minVal = Math.min(-200, ...state.history); 
            const range = maxVal - minVal || 1;
            state.history.forEach((val, i) => {
                const x = (i / (state.history.length - 1)) * w;
                const normalized = (val - minVal) / range;
                const y = h - (normalized * h);
                if (i === 0) chartCtx.moveTo(x, y);
                else chartCtx.lineTo(x, y);
            });
            chartCtx.stroke();
        }

        function showNotification(msg, colorClass = "text-white") {
            const notif = document.getElementById('notification');
            notif.innerText = msg;
            notif.className = `absolute top-4 left-1/2 -translate-x-1/2 bg-slate-800/90 px-4 py-2 rounded-full text-sm font-bold shadow-lg transition-opacity pointer-events-none border border-slate-600 whitespace-nowrap z-20 ${colorClass}`;
            notif.style.opacity = '1';
            setTimeout(() => notif.style.opacity = '0', 2000);
        }

        // --- Interaction ---
        function handleInput(e) {
            const rect = canvas.getBoundingClientRect();
            const clientX = e.touches ? e.touches[0].clientX : e.clientX;
            const clientY = e.touches ? e.touches[0].clientY : e.clientY;
            const x = clientX - rect.left;
            const y = clientY - rect.top;
            const gridPos = env.toGrid(x, y);
            env.handleMapClick(gridPos.x, gridPos.y);
        }

        canvas.addEventListener('mousedown', (e) => { state.isDrawing = true; handleInput(e); });
        canvas.addEventListener('mousemove', (e) => { if (state.isDrawing) handleInput(e); });
        window.addEventListener('mouseup', () => state.isDrawing = false);
        canvas.addEventListener('touchstart', (e) => { e.preventDefault(); state.isDrawing = true; handleInput(e); }, {passive: false});
        canvas.addEventListener('touchmove', (e) => { e.preventDefault(); if (state.isDrawing) handleInput(e); }, {passive: false});

        document.getElementById('btnTrain').addEventListener('click', () => {
            if (state.needsReset) startNextEpisode();
            else { state.running = !state.running; updateTrainBtnState(); }
        });
        document.getElementById('btnNextEp').addEventListener('click', startNextEpisode);
        document.getElementById('autoTrainToggle').addEventListener('change', (e) => { state.autoTrain = e.target.checked; });
        document.getElementById('btnReset').addEventListener('click', () => {
            state.running = false; state.needsReset = false; state.episode = 0; state.wins = 0; state.bestReward = -Infinity; state.history = [];
            scoreEl.innerText = "0";
            document.getElementById('btnNextEp').classList.add('hidden');
            updateTrainBtnState();
            CONFIG.rewards.goal = parseInt(document.getElementById('rewardGoal').value);
            CONFIG.rewards.button = parseInt(document.getElementById('rewardButton').value);
            CONFIG.rewards.wall = parseInt(document.getElementById('rewardWall').value);
            CONFIG.rewards.step = parseInt(document.getElementById('rewardStep').value);
            env.resetMap();
            agent.resetBrain();
            updateStats(); drawChart(); showNotification("Full Reset");
        });
        document.getElementById('speedSlider').addEventListener('input', (e) => {
            state.speedValue = parseInt(e.target.value);
            const label = document.getElementById('speedLabel');
            if (state.speedValue <= 40) label.innerText = "Slow-Mo";
            else if (state.speedValue <= 60) label.innerText = "Normal";
            else label.innerText = "Hyper";
        });
        document.getElementById('toggleView').addEventListener('change', (e) => { state.showBrain = e.target.checked; });
        document.getElementById('btnApplyGrid').addEventListener('click', () => {
            const c = parseInt(document.getElementById('gridCols').value);
            const r = parseInt(document.getElementById('gridRows').value);
            if(c < 3 || r < 3 || c > 25 || r > 25) { showNotification("Size limited to 3-25"); return; }
            CONFIG.cols = c; CONFIG.rows = r;
            document.getElementById('btnReset').click();
            env.resize(c, r);
            showNotification(`Grid Resized to ${c}x${r}`);
        });

        document.querySelectorAll('.tool-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.tool-btn').forEach(b => {
                    b.classList.remove('ring-2', 'ring-blue-400', 'ring-offset-2', 'ring-offset-slate-900', 'bg-blue-600', 'text-white');
                    b.classList.add('bg-slate-700', 'text-slate-300');
                });
                const target = e.currentTarget;
                target.classList.remove('bg-slate-700', 'text-slate-300');
                target.classList.add('ring-2', 'ring-blue-400', 'ring-offset-2', 'ring-offset-slate-900', 'bg-blue-600', 'text-white');
                state.tool = target.dataset.tool;
            });
        });

        // Init
        env.resize(CONFIG.cols, CONFIG.rows);
        gameLoop();
    </script>
</body>
</html>
