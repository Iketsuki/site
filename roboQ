                        <input type="number" id="rewardButton" value="20" class="flex-1 text-purple-400">
                    </div>
                    <div class="flex items-center gap-2">
                        <label class="text-xs text-slate-300 w-24">Wall Penalty</label>
                        <input type="number" id="rewardWall" value="-100" class="flex-1 text-red-400">
                    </div>
                    <div class="flex items-center gap-2">
                        <label class="text-xs text-slate-300 w-24">Step Cost</label>
                        <input type="number" id="rewardStep" value="-1" class="flex-1 text-yellow-400">
                    </div>
